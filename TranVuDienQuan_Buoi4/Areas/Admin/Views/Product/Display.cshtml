<div class="product-detail-container">
    <h2 class="product-title">@Model.Name</h2>

    <div class="product-info">
        <p><strong>💰 Price:</strong> <span class="text-success">$@Model.Price</span></p>
        <p><strong>📝 Description:</strong> @Model.Description</p>
        <p><strong>📂 Category:</strong> <span class="text-primary">@Model.Category?.Name</span></p>
    </div>

    <div class="image-container">
        <img src="@Model.ImageUrl" alt="Product Image" class="product-image" />
    </div>

    <div class="btn-container">
        <a asp-action="Index" class="btn btn-primary">⬅️ Back to List</a>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        text-align: center;
        padding: 20px;
    }

    .product-detail-container {
        background: white;
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .product-info p {
        font-size: 18px;
        color: #555;
        margin: 10px 0;
    }

    .image-container {
        margin: 20px 0;
    }

    .product-image {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .btn-container {
        margin-top: 20px;
    }

    .btn-primary {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #003f7f);
            transform: scale(1.05);
        }
</style>
