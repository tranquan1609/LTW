@model IEnumerable<TranVuDienQuan_Buoi4.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner -->
<section class="banner py-5 text-center text-white" style="background-color: #343a40;">
    <div class="container">
        <h1 class="display-4">Chào mừng đến với cửa hàng của tôi!</h1>
        <p class="lead">Khám phá những sản phẩm tuyệt vời với giá cả phải chăng.</p>
        <a href="#products" class="btn btn-primary btn-lg">Xem sản phẩm</a>
    </div>
</section>


<section id="products" class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">Sản phẩm nổi bật</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100 shadow-sm border-0 product-card" style="width: 18rem;">
                        
                        <div class="overflow-hidden">
                            <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Name" style="height: 280px; object-fit: cover; transition: transform 0.3s ease;">
                        </div>
                        
                        <div class="card-body text-center">
                            <h5 class="fw-bold text-dark">@item.Name</h5>
                            <div class="d-flex justify-content-center">
                                <span class="fw-semibold">Giá: </span>
                                <p class="text-danger fs-5 fw-semibold mx-3">@item.Price.ToString("#,##0") $</p>
                            </div>
                        </div>
                     
                        <div class="card-footer bg-white border-0 p-3">
                            <div class="d-flex flex-column gap-2">
                                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="1" class="btn btn-primary btn-sm">
                                    <i class="bi-cart-fill me-1"></i> Thêm vào giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
    }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .product-card img:hover {
            transform: scale(1.1);
        }
</style>
